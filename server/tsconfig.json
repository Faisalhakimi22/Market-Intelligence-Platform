{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"],
    "baseUrl": ".",  // Define base path for module resolution
    "paths": {
      "@shared/*": ["shared/*"]  // Alias for @shared
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
